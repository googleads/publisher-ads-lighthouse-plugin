{
  "compilerOptions": {
    "noEmit": true,
    "module": "es2022",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  // TODO(jburger): Include type-checking for parent files.
  "include": [
    "**/*.js",
    "**/*.d.ts",
    "../node_modules/lighthouse/types/lh.js",
  ],
  "exclude": [
    "test/**/*.js",
    "visual-report/**",
    "./node_modules/ws/**"
  ]
}
